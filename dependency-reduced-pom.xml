      <version>7.2.1-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>core</artifactId>
          <groupId>com.sk89q.worldedit.worldedit-libs</groupId>
        </exclusion>
        <exclusion>
